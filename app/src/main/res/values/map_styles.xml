<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom fonts -->
    <style name="TextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Custom text buttons -->
    <style name="CustomBottoms" parent="TextStyle">
        <item name="android:layout_margin">@dimen/base_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normal_block</item>
        <!--<item name="android:padding">@dimen/base_margin</item>-->
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="CustomBottoms.Address">
        <!--<item name="android:background">@color/address</item>-->
        <item name="android:background">@drawable/address</item>
        <item name="android:layout_above">@id/select_bt</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:drawableLeft">@drawable/ic_keyboard_arrow_down_white_24dp</item>
    </style>
    <style name="CustomBottoms.SelectTarget">
        <item name="android:text">@string/loading_select_target</item>
        <item name="android:background">@drawable/bt_select_destination_selector</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!--<style name="CustomBottoms.SelectVehicle">-->
        <!--<item name="android:text">@string/loading_select_target</item>+-->
        <!--<item name="android:background">@drawable/bt_select_destination_selector</item>-->
        <!--<item name="android:layout_alignParentBottom">true</item>-->
        <!--<item name="android:visibility">gone</item>-->
    <!--</style>-->

    <!-- Custom images -->
    <style name="CustomImages">
        <item name="android:layout_margin">@dimen/base_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="CustomImages.SelectTarget">
        <item name="android:src">@drawable/cabify_icon</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>